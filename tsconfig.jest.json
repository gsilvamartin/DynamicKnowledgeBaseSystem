{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["jest", "node"],
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es2018",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
} 